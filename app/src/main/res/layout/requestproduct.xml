<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp">

        <RelativeLayout
            android:id="@+id/product_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/product_card_view"
            android:padding="12dp">


            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/layoutmpesa"
                android:background="@drawable/card_input_fields"
                android:hint="Tap to view more"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_card_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/card_input_fields"
                android:hint="@string/product_name"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_card_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_name1"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/card_input_fields"
                android:hint="quantity"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"

                android:textStyle="normal" />

            <TextView
                android:id="@+id/product_card_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_name1"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/product_card_code"
                android:hint="loading"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/product_card_code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_code"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/card_input_fields"
                android:hint="Status"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"

                android:textStyle="normal" />

            <TextView
                android:id="@+id/status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_price1"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/product_card_code"
                android:hint="loading"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/layoutmpesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status1"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codeq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_card_code"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/card_input_fields"
                    android:hint="Mpesa"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"

                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_card_price1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/product_card_code"
                    android:hint=""
                    android:padding="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>