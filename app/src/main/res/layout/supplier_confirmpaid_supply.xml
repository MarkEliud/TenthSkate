<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Supplier.Activity.Supplier_confirmSupply">

    <TextView
        android:id="@+id/txtProductInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Confirm Paid And Supply"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProductInfo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/manageProductName"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/input_fields"
                android:hint="@string/product_name"
                android:padding="2dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />



            <RelativeLayout
                android:id="@+id/manageProductCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/manageProductName"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/category"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/manageProductCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/category"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <EditText
                android:id="@+id/manageProductDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/manageProductCategoryLayout"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/input_fields"
                android:hint="@string/product_description"
                android:padding="2dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarSize="5dp"
                android:scrollbars="vertical|horizontal"
                android:scrollHorizontally="true"
                android:verticalScrollbarPosition="right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/manageProductDescription">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/manageProductquantity"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:background="@drawable/card_input_fields"
                        android:hint="Packages"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/rice"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:background="@drawable/card_input_fields"
                        android:hint="price"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:id="@+id/mpesacode"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:background="@drawable/card_input_fields"
                        android:hint="mpesacode"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/buttons"
                    android:text="confirm Paid Supply Now"
                    android:padding="15dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>